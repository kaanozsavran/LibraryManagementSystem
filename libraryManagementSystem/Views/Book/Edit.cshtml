@model Book

@{
    Layout = "_LayoutNoFooter"; // Yeni oluşturduğum layoutnofooter
    ViewBag.Title = "Kitap Güncelleme"; // Ana sayfanın başlığı
}

<h2>Kitap Güncelle</h2>
<hr>
<form asp-action="Edit" asp-asp-controller="Book" method="post">
    <input type="hidden" asp-for="BookID">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Kitabın Adı</label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Author" class="form-label">Yazar</label>
        <input asp-for="Author" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="PublicationYear" class="form-label">Yayın Yılı</label>
        <input asp-for="PublicationYear" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Kategori</label>
        <input asp-for="Category" class="form-control">
    </div>
   
    <button type="submit" class="btn btn-secondary">Güncelle</button>


</form>

